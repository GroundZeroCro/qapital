<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.goal.GoalsFragment"
        android:layout_marginTop="@dimen/mayor_padding"
        android:layout_marginLeft="@dimen/mayor_padding"
        android:layout_marginRight="@dimen/mayor_padding"
        app:cardBackgroundColor="@color/sea"
        app:cardCornerRadius="@dimen/goal_corner_radius"
        app:cardElevation="@dimen/large_elevation">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageView
                android:id="@+id/goal_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        <View android:layout_width="0dp"
              android:layout_height="50dp"
              android:background="@color/ocean"
              app:layout_constraintBottom_toBottomOf="@id/goal_title"
              app:layout_constraintRight_toRightOf="@id/goal_title"
              app:layout_constraintLeft_toLeftOf="@id/goal_title"
              app:layout_constraintTop_toTopOf="@id/goal_title"
              android:rotation="-6"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/goal_title"
                android:padding="@dimen/normal_padding"
                android:textColor="@color/white"
                android:text="example"
                app:layout_constraintBottom_toBottomOf="@id/goal_image"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="@dimen/fragment_title"
                fontPath="@string/title_font"
                tools:ignore="MissingPrefix"
                style="@style/TitleShadow"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/goal_costs"
                android:padding="@dimen/normal_padding"
                android:textColor="@color/white"
                android:text="example"
                app:layout_constraintTop_toBottomOf="@id/goal_image"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="@dimen/subtitle_size"
                fontPath="@string/title_font" tools:ignore="MissingPrefix"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>